@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>

    <div class="card container" id="card-class-login">
        <div class="card-header">
            <b style="font-size:20px;">Login</b>
        </div>
        <div class="card-body">

            <form>
                <div class="form-group">
                    @Html.Label("Email")
                    @Html.TextBox("Email", "", new { @class = "form-control", @placeholder = "e.g : abc@example.com" })
                </div> <!-- form-group// -->

                <div class="form-group">
                    @Html.Label("Password")

                    @Html.Password("Password", "", new { @class = "form-control", @placeholder = "************" })
                </div> <!-- form-group// -->

                <div style="float:right;">
                    @Html.ActionLink("Forgot Password ?", "Forgot")
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Login  </button>
                </div> <!-- form-group// -->

            </form>
        </div>
    </div>
</body>
</html>
