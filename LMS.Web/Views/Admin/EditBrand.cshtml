@model LMS.Web.BAL.ViewModels.AdminBrandViewModel

@{
    ViewBag.Title = "EditBrand";
}

@using (Html.BeginForm("EditBrand", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card card-blue mt-3">
        <div class="card-header">
            <h3 class="card-title">Edit Brand</h3>
        </div>
        <div class="card-body">
            <form>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name)
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-10" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Brandcode)
                            @Html.EditorFor(model => model.Brandcode, new { htmlAttributes = new { @class = "form-control col-10" } })
                            @Html.ValidationMessageFor(model => model.Brandcode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <!-- text input -->
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsActive)

                            <div class="checkbox">
                                @Html.EditorFor(model => model.IsActive)
                                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <div>
                        <input type="submit" value="Save" class="btn btn-outline-success " />&nbsp;&nbsp;&nbsp;
                        <a href="/Admin/BrandList" class="btn btn-outline-dark btn-sx float-right" role="button" aria-pressed="true">Back To List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
}